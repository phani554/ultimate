---
interface Props {
	placeholder?: string;
}

const { placeholder = "Loading..." } = Astro.props;
---

<div class="ascii-art-container">
	<div class="ascii-art-placeholder">{placeholder}</div>
	<pre class="ascii-art">
  _____                _                   _____           _      
 / ____|              | |                 / ____|         | |     
| |     _   _ _ __ ___| |_ ___   ______  | (___   ___  __| | ___ 
| |    | | | | '__/ _ \ __/ _ \ |______|  \___ \ / _ \/ _` |/ _ \
| |____| |_| | | |  __/ || (_) |          ____) |  __/ (_| |  __/
 \_____\__, |_|  \___|\__\___/          |_____/ \___|\__,_|\___|
        __/ |                                                    
       |___/                                                     
	</pre>
</div>

<style>
	.ascii-art-container {
		margin: 20px 0;
		padding: 15px;
		background-color: rgba(0, 0, 0, 0.3);
		border: 1px solid var(--terminal-dim);
		border-radius: 4px;
		position: relative;
		overflow: hidden;
	}
	
	.ascii-art-placeholder {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: var(--terminal-dim);
		font-style: italic;
		background-color: rgba(0, 0, 0, 0.5);
		z-index: 1;
		opacity: 0;
		transition: opacity 0.5s ease;
	}
	
	.ascii-art {
		font-family: monospace;
		font-size: 0.6rem;
		line-height: 1;
		color: var(--terminal-accent);
		margin: 0;
		text-align: center;
		white-space: pre;
		overflow-x: auto;
		animation: scanlines 2s linear infinite;
	}
	
	@keyframes scanlines {
		0% {
			background-position: 0 0;
		}
		100% {
			background-position: 0 30px;
		}
	}
	
	@media (min-width: 768px) {
		.ascii-art {
			font-size: 0.8rem;
		}
	}
</style>
