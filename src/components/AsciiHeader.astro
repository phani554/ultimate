</div>

<style>
  .ascii-header {
    width: 100%;
    margin-bottom: 2rem;
    background-color: rgba(0, 0, 0, 0.3);
    border: 1px solid var(--terminal-dim, #6272a4);
    border-radius: 4px;
    padding: 1rem;
    overflow: hidden;
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .header-logo-container {
    flex-shrink: 0;
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-right: 1px dashed var(--terminal-dim, #6272a4);
    padding-right: 1rem;
  }

  .header-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .header-logo {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 0 5px rgba(139, 233, 253, 0.5));
  }

  .ascii-logo {
    font-family: monospace;
    font-size: 0.6rem;
    line-height: 1;
    color: var(--terminal-accent, #8be9fd);
    margin: 0;
    text-align: center;
    white-space: pre;
    overflow-x: auto;
    animation: glitchText 2s infinite alternate;
  }

  .header-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 0.5rem;
    border-top: 1px dashed var(--terminal-dim, #6272a4);
  }

  .header-title {
    font-family: 'Courier New', monospace;
    font-weight: bold;
    color: var(--terminal-warning, #ffb86c);
    font-size: 1rem;
  }

  .header-status {
    display: flex;
    gap: 1rem;
    font-family: 'Courier New', monospace;
    font-size: 0.8rem;
  }

  .status-item {
    color: var(--terminal-dim, #6272a4);
  }

  .status-active {
    color: var(--terminal-success, #50fa7b);
    animation: blink 1.5s infinite;
  }

  .status-warning {
    color: var(--terminal-warning, #ffb86c);
  }

  .status-secure {
    color: var(--terminal-accent, #8be9fd);
  }

  @keyframes glitchText {
    0% {
      text-shadow: 0.05em 0 0 rgba(255, 0, 0, 0.75), -0.05em -0.025em 0 rgba(0, 255, 0, 0.75), -0.025em 0.05em 0 rgba(0, 0, 255, 0.75);
    }
    14% {
      text-shadow: 0.05em 0 0 rgba(255, 0, 0, 0.75), -0.05em -0.025em 0 rgba(0, 255, 0, 0.75), -0.025em 0.05em 0 rgba(0, 0, 255, 0.75);
    }
    15% {
      text-shadow: -0.05em -0.025em 0 rgba(255, 0, 0, 0.75), 0.025em 0.025em 0 rgba(0, 255, 0, 0.75), -0.05em -0.05em 0 rgba(0, 0, 255, 0.75);
    }
    49% {
      text-shadow: -0.05em -0.025em 0 rgba(255, 0, 0, 0.75), 0.025em 0.025em 0 rgba(0, 255, 0, 0.75), -0.05em -0.05em 0 rgba(0, 0, 255, 0.75);
    }
    50% {
      text-shadow: 0.025em 0.05em 0 rgba(255, 0, 0, 0.75), 0.05em 0 0 rgba(0, 255, 0, 0.75), 0 -0.05em 0 rgba(0, 0, 255, 0.75);
    }
    99% {
      text-shadow: 0.025em 0.05em 0 rgba(255, 0, 0, 0.75), 0.05em 0 0 rgba(0, 255, 0, 0.75), 0 -0.05em 0 rgba(0, 0, 255, 0.75);
    }
    100% {
      text-shadow: -0.025em 0 0 rgba(255, 0, 0, 0.75), -0.025em -0.025em 0 rgba(0, 255, 0, 0.75), -0.025em -0.05em 0 rgba(0, 0, 255, 0.75);
    }
  }

  @keyframes blink {
    0%, 49% {
      opacity: 1;
    }
    50%, 100% {
      opacity: 0.5;
    }
  }

  @media (min-width: 768px) {
    .ascii-logo {
      font-size: 0.8rem;
    }
  }
</style>
