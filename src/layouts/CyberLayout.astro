<div class="cyber-layout">
	<div class="cyber-background"></div>
	<div class="cyber-container">
		<slot />
	</div>
</div>

<style is:global>
	:root {
		--terminal-bg: #282a36;
		--terminal-text: #f8f8f2;
		--terminal-header: #1e1f29;
		--terminal-dim: #6272a4;
		--terminal-accent: #8be9fd;
		--terminal-success: #50fa7b;
		--terminal-warning: #ffb86c;
		--terminal-error: #ff5555;
	}
	
	body {
		margin: 0;
		padding: 0;
		background-color: #0a0a0a;
		color: var(--terminal-text);
		font-family: 'Courier New', monospace;
		overflow-x: hidden;
	}
	
	body.glitch-transition::after {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(139, 233, 253, 0.1);
		z-index: 9999;
		pointer-events: none;
		animation: glitchTransition 1s ease-out;
	}
	
	@keyframes glitchTransition {
		0% {
			opacity: 0;
		}
		10% {
			opacity: 1;
		}
		20% {
			opacity: 0;
		}
		30% {
			opacity: 1;
		}
		40% {
			opacity: 0;
		}
		50% {
			opacity: 1;
		}
		60% {
			opacity: 0;
		}
		100% {
			opacity: 0;
		}
	}
</style>

